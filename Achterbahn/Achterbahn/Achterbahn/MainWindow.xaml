<Window x:Class="Achterbahn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Achterbahn"
        mc:Ignorable="d"
        Title="Achterbahn" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Width="300" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <StackPanel>
                <TextBlock Text="Anzahl Passagiere:"/>
                <TextBox x:Name="TxtPassagiere" Text="18"></TextBox>
            </StackPanel>
            
            <StackPanel>
                <TextBlock Text="Anzahl Sitzplätze:"/>
                <TextBox x:Name="TxtPlaetze" Text="10"></TextBox>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Anzahl Fahrten:"/>
                <TextBox x:Name="TxtFahrten" Text="8"></TextBox>
            </StackPanel>
        </StackPanel>
        
        

        <StackPanel Margin="353,11,28,28">
            <ListView x:Name="PassengerListView" ItemsSource="{Binding PassengerList}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Passagier" Width="120" 
                            DisplayMemberBinding="{Binding Id}"/>
                        <GridViewColumn Header="Status" Width="700"
                            DisplayMemberBinding="{Binding Status}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>


        <Button Margin="10,141,687,252" Background="Green" Click="Btn_Start" x:Name="Button_Start">Start</Button>

        <Button Margin="207,141,490,252" Background="Red" Click="Btn_Stop" x:Name="Button_Stop">Stop</Button>

        <TextBlock x:Name="AnzahlAnzeige" Margin="62,206,664,177" RenderTransformOrigin="0.685,1.252"></TextBlock>
        
    </Grid>
</Window>
